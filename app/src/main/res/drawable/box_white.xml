<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="2dip" android:color="@color/colorGrey_traslucid"/>
            <gradient android:angle="-90" android:startColor="@color/colorGrey_traslucid" android:endColor="@color/colorGrey_traslucid"/>
        </shape>
    </item>


    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="2dip" android:color="@color/white"/>
            <gradient android:angle="-90" android:startColor="@color/white" android:endColor="@color/white"/>
        </shape>
    </item>
</selector>